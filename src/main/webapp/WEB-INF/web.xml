<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee" xmlns:javaee="http://xmlns.jcp.org/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
  <display-name>projetoJsf</display-name>
 <welcome-file-list>
		 <welcome-file>public/login.xhtml</welcome-file>
	</welcome-file-list>
 <servlet>
   <servlet-name>Faces Servlet</servlet-name>
   <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
   <load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
   <servlet-name>Faces Servlet</servlet-name>
   <url-pattern>*.jsf</url-pattern>
</servlet-mapping>
<servlet-mapping>
   <servlet-name>Faces Servlet</servlet-name>
   <url-pattern>*.faces</url-pattern>
</servlet-mapping>
<servlet-mapping>
   <servlet-name>Faces Servlet</servlet-name>
   <url-pattern>/faces/*</url-pattern>
</servlet-mapping>
<servlet-mapping>
   <servlet-name>Faces Servlet</servlet-name>
   <url-pattern>*.xhtml</url-pattern>
</servlet-mapping>

<resource-ref>
     <description>DataSource projetoAula</description>
     <res-ref-name>jdbc/projetoAula</res-ref-name>
     <res-type>javax.sql.DataSource</res-type>
     <res-auth>Container</res-auth>
</resource-ref>
<!-- Abre conexão com o banco de dados e fecha ao final da transação -->
	<filter>
        <filter-name>conectionFilter</filter-name>
        <filter-class>Dao.utils.ConectionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>conectionFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <context-param>
 <!-- Tema sam para a tela -->   
<param-name>primefaces.THEME</param-name>
	<param-value>bluesky</param-value>
</context-param>	
 <!-- Tempo de sessão -->
<session-config>
    <session-timeout>15</session-timeout>
 </session-config>
 <!--  login filter -->
  <filter>
      <filter-name>FiltroBasico</filter-name>
      <filter-class>Filtro.Filtro</filter-class>    
  </filter>
  <filter-mapping>
      <filter-name>FiltroBasico</filter-name>
      <url-pattern>/restricted/*</url-pattern>
  </filter-mapping>

</web-app>